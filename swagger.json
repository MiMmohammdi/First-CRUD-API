{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "My First CRUD API",
    "description": "RESTful APIs for CRUD operations in two databases, mySQL and MongoDB"
  },
  "host": "localhost:8080",
  "basePath": "/api/v1/users/",
  "tags": [
    {
      "name": "Users",
      "description": "APIs for users in the system"
    }
  ],
  "paths": {
    "/{db}/create": {
      "post": {
        "tags": ["Users"],
        "summary": "Create new user in system",
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "path",
            "name": "db",
            "description": "Database type",
            "type": "string",
            "enum": ["sql", "nosql"],
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user created.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/{db}/findall": {
      "parameters": [
        {
          "in": "path",
          "name": "db",
          "description": "Database type",
          "type": "string",
          "enum": ["sql", "nosql"],
          "required": true
        }
      ],
      "get": {
        "tags": ["Users"],
        "summary": "Get all users in system",
        "responses": {
          "202": {
            "description": "User list received successfully.OK",
            "schema": {
              "$ref": "#/definitions/All"
            }
          }
        }
      }
    },
    "/{db}/find/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of user that we want to find",
          "type": "string"
        },
        {
          "in": "path",
          "name": "db",
          "description": "Database type",
          "type": "string",
          "enum": ["sql", "nosql"],
          "required": true
        }
      ],
      "get": {
        "summary": "Find user with give ID",
        "tags": ["Users"],
        "responses": {
          "202": {
            "description": "User is find.",
            "schema": {
              "$ref": "#/definitions/FindUser"
            }
          }
        }
      }
    },
    "/{db}/update/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of user that we want to find",
          "type": "string"
        },
        {
          "in": "path",
          "name": "db",
          "description": "Database type",
          "type": "string",
          "enum": ["sql", "nosql"],
          "required": true
        }
      ],
      "put": {
        "summary": "Update user with give ID",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User with new values of properties",
            "schema": {
              "$ref": "#/definitions/UpdateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User was updated successfully.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/{db}/delete/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of user that we want to find",
          "type": "string"
        },
        {
          "in": "path",
          "name": "db",
          "description": "Database type",
          "type": "string",
          "enum": ["sql", "nosql"],
          "required": true
        }
      ],
      "delete": {
        "summary": "Delete user with give ID",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "User was deleted successfully.",
            "schema": {
              "$ref": "#/definitions/FindUser"
            }
          }
        }
      }
    },
    "/{db}/deleteall": {
      "parameters": [
        {
          "in": "path",
          "name": "db",
          "description": "Database type",
          "type": "string",
          "enum": ["sql", "nosql"],
          "required": true
        }
      ],
      "delete": {
        "summary": "Delete all user",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "Users is deleted.",
            "schema": {
              "$ref": "#/definitions/All"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": ["fullName", "city"],
      "properties": {
        "name": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "age": {
          "type": "number"
        }
      }
    },
    "UpdateUser": {
      "required": ["fullName", "city"],
      "properties": {
        "name": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "age": {
          "type": "number"
        }
      }
    },
    "FindUser": {
      "required": ["id", "db"],
      "properties": {
        "id": {
          "type": "string"
        },
        "db": {
          "type": "string"
        }
      }
    },
    "All": {
      "required": ["db"],
      "properties": {
        "db": {
          "type": "string"
        }
      }
    }
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"]
}
